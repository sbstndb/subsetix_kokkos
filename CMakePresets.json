{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "serial",
      "displayName": "Kokkos SERIAL backend",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-serial",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "openmp",
      "displayName": "Kokkos OPENMP + SERIAL backends",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-openmp",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "SUBSETIX_KOKKOS_OPENMP": "ON"
      }
    },
    {
      "name": "cuda-clang",
      "displayName": "Kokkos CUDA + SERIAL backends (Clang)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-cuda-clang",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "SUBSETIX_KOKKOS_CUDA": "ON",
        "CMAKE_CXX_COMPILER": "/usr/bin/clang++"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "serial",
      "configurePreset": "serial"
    },
    {
      "name": "openmp",
      "configurePreset": "openmp"
    },
    {
      "name": "cuda-clang",
      "configurePreset": "cuda-clang"
    }
  ],
  "testPresets": [
    {
      "name": "serial",
      "configurePreset": "serial"
    },
    {
      "name": "openmp",
      "configurePreset": "openmp"
    },
    {
      "name": "cuda-clang",
      "configurePreset": "cuda-clang"
    }
  ]
}

